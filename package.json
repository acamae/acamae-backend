{
  "name": "@acamae/backend",
  "version": "1.1.2",
  "description": "Backend for Acamae application",
  "type": "module",
  "main": "src/index.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint  \"src/**/*.{js,jsx}\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:up": "docker compose -f docker/docker-compose.yml up",
    "docker:up:build": "docker compose -f docker/docker-compose.yml up --build",
    "docker:build:nocache": "docker compose -f docker/docker-compose.yml build --no-cache",
    "docker:down": "docker compose -f docker/docker-compose.yml down -v --remove-orphans",
    "docker:reset": "docker compose -f docker/docker-compose.yml down -v --rmi all --remove-orphans",
    "lerna:start": "lerna run --scope=acamae/backend start --passWithNoTests",
    "lerna:build": "lerna run build",
    "lerna:test": "lerna run test",
    "lerna:lint": "lerna run lint",
    "lerna:publish": "lerna publish from-package --yes"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "html-escaper": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "sanitize-html": "^2.12.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^6.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Alfonso Martin",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
