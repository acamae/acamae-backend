{
  "name": "@acamae/backend",
  "version": "1.2.3",
  "description": "Backend for Acamae application",
  "type": "module",
  "main": "src/index.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "env:dev": "cross-env NODE_ENV=development node scripts/_env-manager.js copy",
    "env:prod": "cross-env NODE_ENV=production node scripts/_env-manager.js copy",
    "env:test": "node scripts/_env-manager.js test",
    "env:setup": "node scripts/_env-manager.js setup",
    "start": "npm run start:dev",
    "start:dev": "npm run env:dev && nodemon src/index.js",
    "start:debug": "npm run env:dev && nodemon --inspect=0.0.0.0:9229 src/index.js",
    "start:prod": "npm run env:prod && node src/index.js",
    "dev": "npm run start:dev",
    "lint": "eslint  \"src/**/*.{js,jsx}\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
    "lint:check": "eslint \"src/**/*.{js,jsx}\" --max-warnings 0 --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json}\"",
    "prisma:generate": "npm run env:dev && prisma generate",
    "prisma:migrate": "npm run env:dev && prisma migrate dev",
    "prisma:push": "npm run env:dev && prisma db push",
    "prisma:studio": "npm run env:dev && prisma studio",
    "prisma:deploy": "npm run env:dev && prisma migrate deploy",
    "prisma:status": "npm run env:dev && prisma migrate status",
    "prisma:reset": "npm run env:dev && prisma migrate reset",
    "prisma:seed": "npm run env:dev && prisma db seed",
    "prisma:prod:deploy": "npm run env:prod && prisma migrate deploy",
    "prisma:prod:status": "npm run env:prod && prisma migrate status",
    "db:backup": "bash scripts/db-manager.sh backup",
    "db:backup:auto": "bash scripts/db-manager.sh backup --auto",
    "db:rollback": "bash scripts/db-manager.sh rollback",
    "db:status": "bash scripts/db-manager.sh status",
    "ssl:generate": "node scripts/generate-ssl.js",
    "ssl:force": "node scripts/generate-ssl.js --force",
    "docker:create:net": "docker network create --driver bridge acamae-network",
    "docker:build": "docker compose -p acamae-backend -f docker/docker-compose.yml build",
    "docker:build:nocache": "docker compose -p acamae-backend -f docker/docker-compose.yml build --no-cache",
    "docker:up": "npm run env:dev && docker compose -p acamae-backend -f docker/docker-compose.yml up -d",
    "docker:down": "npm run env:dev && docker compose -f docker/docker-compose.yml stop backend && docker compose -f docker/docker-compose.yml rm -f backend",
    "docker:down:all": "docker compose -p acamae-backend -f docker/docker-compose.yml down -v --remove-orphans",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docker:reset": "docker compose -p acamae-backend -f docker/docker-compose.yml down -v --rmi all --remove-orphans",
    "docker:logs": "docker compose -p acamae-backend -f docker/docker-compose.yml logs -f backend",
    "docker:shell": "docker compose -p acamae-backend -f docker/docker-compose.yml exec backend /bin/bash",
    "build": "npm run lint:check && npm run format:check && npm run prisma:generate",
    "build:prod": "npm run env:prod && npm run build",
    "pretest": "npm run env:test",
    "test": "jest --runInBand --detectOpenHandles --verbose",
    "test:watch": "jest --watch --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles",
    "test:unit": "jest --testPathPattern=unit --runInBand --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --runInBand --detectOpenHandles",
    "test:ci": "npm run lint:check && npm run format:check && npm run test:coverage",
    "setup": "bash scripts/setup-initial-config.sh",
    "setup:backend": "bash scripts/setup-backend.sh",
    "setup:quick": "npm run env:setup && npm run prisma:generate",
    "clean": "rm -rf node_modules/.cache && rm -rf coverage && rm -rf logs/*.log",
    "clean:full": "npm run clean && rm -rf node_modules && npm install",
    "health": "npm run lint:check && npm run format:check && npm run test:unit && npm run db:status",
    "release": "npm run build:prod && npm run test:ci"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "html-escaper": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.6.0",
    "morgan": "^1.10.0",
    "sanitize-html": "^2.12.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@jest/globals": "^30.0.3",
    "commitizen": "^4.3.0",
    "commitlint": "^19.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.0",
    "jest": "^30.0.3",
    "lerna": "^8.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^6.10.1",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=11.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acamae/acamae-backend.git"
  },
  "keywords": [
    "esports",
    "management",
    "platform",
    "react",
    "nodejs"
  ],
  "author": "Alfonso Martin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acamae/acamae-backend/issues"
  },
  "homepage": "https://github.com/acamae/acamae-backend#readme",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
